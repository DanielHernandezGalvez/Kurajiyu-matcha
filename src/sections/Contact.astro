---
import { Icon } from "astro-icon/components";
---

<section id="contacto" class="py-20 bg-matcha-leaves-700 text-white">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <h2
                class="text-3xl md:text-4xl font-serif font-bold mb-4 text-white"
            >
                Contáctanos
            </h2>
            <div class="w-24 h-1 bg-matcha-light mx-auto"></div>
        </div>

        <!-- Banner CTA para Mayoreo -->
        <div
            class="bg-matcha-green/20 border border-matcha-leaves-300/30 rounded-xl p-6 mb-12 transform transition duration-300 hover:scale-[1.02]"
        >
            <div
                class="flex flex-col md:flex-row items-center justify-between gap-6"
            >
                <div class="text-center md:text-left">
                    <div
                        class="flex items-center justify-center md:justify-start mb-2"
                    >
                        <div
                            class="bg-matcha-green text-matcha-light rounded-full w-8 h-8 flex items-center justify-center mr-3"
                        >
                            <i class="fas fa-store text-sm"></i>
                        </div>
                        <h3
                            class="text-xl font-serif font-bold text-matcha-light"
                        >
                            ¿Eres Negocio o Cafetería?
                        </h3>
                    </div>
                    <p class="text-matcha-gray text-lg">
                        Obtén precios especiales de mayoreo y conviértete en
                        distribuidor oficial
                    </p>
                </div>
                <div class="flex flex-col sm:flex-row gap-3">
                    <a
                        href=`https://wa.me/${import.meta.env.WHATSAPP}?text=Hola,%20me%20interesan%20los%20precios%20de%20mayoreo%20para%20mi%20negocio`
                        target="_blank"
                        rel="noopener noreferrer"
                        class="bg-matcha-green hover:bg-matcha-light text-matcha-light hover:text-matcha-dark px-6 py-3 rounded-lg font-medium transition-all duration-300 transform hover:scale-105 shadow-md flex items-center justify-center space-x-2 whitespace-nowrap"
                    >
                        <Icon name="bi:whatsapp" class="text-lg" />
                        <span>Solicitar Cotización</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <div>
                <div class="space-y-6 mb-8">
                    <div class="flex items-center">
                        <div
                            class="bg-matcha-green text-matcha-light rounded-full w-10 h-10 flex items-center justify-center mr-4"
                        >
                            <Icon name="bi:map" />
                        </div>
                        <span>Av. Aviación #4167</span>
                    </div>
                    <div class="flex items-center">
                        <div
                            class="bg-matcha-green text-matcha-light rounded-full w-10 h-10 flex items-center justify-center mr-4"
                        >
                            <Icon name="bi:whatsapp" class="text-lg" />
                        </div>
                        <span>3331500014</span>
                    </div>
                    <div class="flex items-center">
                        <div
                            class="bg-matcha-green text-matcha-light rounded-full w-10 h-10 flex items-center justify-center mr-4"
                        >
                            <Icon name="bi:envelope" class="text-lg" />
                        </div>
                        <span>info@matchaceremonial.com</span>
                    </div>
                </div>

                <h3 class="text-xl font-serif font-bold mb-4 text-matcha-light">
                    Síguenos en redes sociales
                </h3>
                <div class="flex space-x-4">
                    <a
                        href="https://www.instagram.com/kurajiyumatcha"
                        class="bg-matcha-green/20 text-matcha-light rounded-full w-10 h-10 flex items-center justify-center hover:bg-matcha-green transition-colors duration-300"
                    >
                        <Icon name="bi:instagram" class="text-lg" />
                    </a>
                    <a
                        href="https://www.tiktok.com/@kurajiyumatcha"
                        class="bg-matcha-green/20 text-matcha-light rounded-full w-10 h-10 flex items-center justify-center hover:bg-matcha-green transition-colors duration-300"
                    >
                        <Icon name="bi:tiktok" class="text-lg" />
                    </a>
                    <a
                        href="https://wa.me/5213331500014"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="bg-matcha-green/20 text-matcha-light rounded-full w-10 h-10 flex items-center justify-center hover:bg-matcha-green transition-colors duration-300"
                    >
                        <Icon name="bi:whatsapp" class="text-lg" />
                    </a>
                </div>
            </div>

            <div>
                <h3
                    class="text-2xl font-serif font-bold mb-6 text-matcha-light"
                >
                    Ven y Visítanos
                </h3>
                <div class="mt-8 rounded-lg overflow-hidden shadow-lg">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3731.5303973589926!2d-103.4551435241332!3d20.72928559799586!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8428a8b516022611%3A0x7fdcf3eb8bde75c9!2sAv.%20Aviaci%C3%B3n%204167%2C%20San%20Juan%20de%20Ocot%C3%A1n%2C%2045019%20Zapopan%2C%20Jal.!5e0!3m2!1ses!2smx!4v1759426533978!5m2!1ses!2smx"
                        width="100%"
                        height="400px"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"
                        class="w-full h-52 md:h-56"
                    >
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>
